{
    "description": "Bootswatch for WordPress",
    "license": "MIT",
    "require": {
        "php": ">=5.6",
        "cssjanus/cssjanus": "^1.2",
        "kadimi/bootswatch-light": "^1.0",
        "ext-zip": "^1.15",
        "wikimedia/less.php": "^1.8"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "wptrt/wpthemereview": "^0.2.1"
    },
    "scripts": {
        "lint:php": "@php ./vendor/bin/parallel-lint --exclude .git --exclude vendor .",
        "lint:wpcs": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs --runtime-set testVersion 5.6-",
        "make-pot": "wp i18n make-pot . languages/_s.pot",
        "post-install-cmd": "php -f build/build.php",
        "post-update-cmd": "php -f build/build.php"
    }
}
